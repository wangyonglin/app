<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorWechat</item>
        <item name="android:windowBackground">@drawable/welcome</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorWechat</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@color/colorOverlay</item>
        <!--修改searchView样式-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="SimplePlayActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@mipmap/ic_search</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VitamioTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorWechat</item>
    </style>




    <style name="style_button" >
        <item name="android:layout_width" >match_parent</item >
        <item name="android:layout_height" >wrap_content</item >
        <item name="android:textColor" >@android:color/white</item >
        <item name="android:textSize" >16sp</item >
        <item name="android:layout_marginLeft" >60dp</item >
        <item name="android:background" >@drawable/btn_background</item >
        <item name="android:layout_marginRight" >60dp</item >
    </style >

</resources>
