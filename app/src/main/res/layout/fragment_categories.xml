<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/icons"
    android:orientation="vertical"
    tools:context=".fragment.CategoriesFragment">
    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_main_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:tabTextColor="@color/icons"
        android:background="@color/primary"
        app:tabRippleColor="@color/icons"
        app:tabSelectedTextColor="@color/icons"
        app:tabIndicatorColor="@color/icons"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        />


    <!--TODO: -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_main_categories"
        android:layout_marginBottom="60dp">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:id="@+id/fragment_categories_recyclerview"/>
    </ScrollView>
</RelativeLayout>